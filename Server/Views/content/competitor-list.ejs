<h1>Competitor List</h1>

<div class="row">
    <div class="col">
        <a href="/competitor-list/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Competitor</a>
        <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Description</th>
              </tr>
            </thead>
            <tbody>
                
              <!-- Repeatable Row Template -->

              <% for(let count = 0; count < competitor.length; count++) { %>
              
              <tr>
                <th scope="row"><%= count + 1 %></th>
                <td><%= competitor[count].fullname %> </td>
                <td><%= competitor[count].description %> </td>
              </tr>

              <% } %>
             
            </tbody>
          </table>


    </div>
</div>